<!-- views/layouts/main.handlebars -->

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{title}}</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
<div class="container">
    <div class="navbar">
        <div class="section">
            <h3>Categories</h3>
            <ul>
                {{#each categories}}
                    <li>
                        <input type="checkbox" id="{{this.id}}" checked="checked" name="{{this.name}}">
                        <label for="{{this.id}}">{{this.category}}</label>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="section">
            <h3>Characters</h3>
            <ul>
                {{#each characters}}
                    <li>
                        <input type="checkbox" id="{{this.id}}" checked="checked" name="{{this.name}}">
                        <label for="{{this.id}}">{{this.character}}</label>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="main-section">
        {{{body}}}
    </div>
</div>
</body>
<script src="/modal.js"></script>
</html>
